{
    // Predefined globals whom JSHint will ignore.
    "browser"       : true,
    "jquery"        : true,

     // Development.
    "debug"         : false,
    "devel"         : false,

    // The Good Parts.
    "asi"           : true,
    "laxbreak"      : true,
    "bitwise"       : false,
    "boss"          : false,
    "curly"         : true,
    "eqeqeq"        : true,
    "eqnull"        : false,
    "evil"          : false,
    "expr"          : false,
    "forin"         : false,
    "immed"         : true,
    "latedef"       : true,
    "loopfunc"      : true,
    "noarg"         : true,
    "regexp"        : true,
    "regexdash"     : false,
    "scripturl"     : true,
    "shadow"        : false,
    "supernew"      : false,
    "undef"         : true,


    // Personal styling preferences.
    "newcap"        : true,
    "noempty"       : true,
    "nonew"         : true,
    "nomen"         : true,
    "camelcase"     : false,
    "onevar"        : false,
    "plusplus"      : false,
    "sub"           : false,
    "trailing"      : true,
    "white"         : true,
    "indent"        : 2,

    "globals": {
        "jQuery": true,
        "console": true,
        "module": true,
        "document": true,
        "require": true,
        "SESSIONID": true,
        "meta": true,
        "pageYOffset": true,
        "pageXOffset": true
    }
}